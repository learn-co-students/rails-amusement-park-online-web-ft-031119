<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @attraction.name %>
</p>

<p>
  <strong>Min height:</strong>
  <%= @attraction.min_height %>
</p>

<p>
  <strong>Nausea rating:</strong>
  <%= @attraction.nausea_rating %>
</p>

<p>
  <strong>Happiness rating:</strong>
  <%= @attraction.happiness_rating %>
</p>

<p>
  <strong>Ticket number:</strong>
  <%= @attraction.tickets %>
</p>
<%= form_tag({controller: 'rides', action: 'go_on_ride', method: 'post'}) do %>
  <%= hidden_field_tag "id", @attraction.id%>
  <input type="submit" value="Go on this ride">
<% end %>
<%= link_to 'Edit', edit_attraction_path(@attraction) %> |
<%= link_to 'Back', attractions_path %>
